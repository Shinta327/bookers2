<div class="container">
  <div class="row">

    <%= render 'layouts/sidebar', book: @book_new, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpeg", size: "40x40" %><br />
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book.id), method: :delete do %>
              ♥<%= @book.favorites.count %>
              <% end %>
            </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(@book.id), method: :post do %>
              ♡<%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <td>
            <P>コメント件数:<%= @book.post_comments.count %></P>
          </td>
          <% if @book.user_id == current_user.id %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm"=>"本当に削除しますか？" %>
          </td>
          <% end %>
        </tr>

      </table>

      <div class="comments" %>
        <table>
        <% @book.post_comments.each do |post_comment| %>
          <tr>
            <td>
              <%= link_to user_path(post_comment.user) do %>
                <%= attachment_image_tag post_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpeg", size: "40x40" %></br>
                <%= post_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= post_comment.comment %>
            </td>
            <% if post_comment.user == current_user %>
            <td>
              <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger" %>
            </td>
            <% end %>
          </tr>
            <% end %>
        </table>
      </div>

      <div class="new_comment" %>
        <%= form_with(model:[@book, @post_comment], local: true ) do |f| %>
          <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに", class: "form-control" %>
          <%= f.submit "送信", class: "btn btn-success" %>
        <% end %>
  </div>
</div>